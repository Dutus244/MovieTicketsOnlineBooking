<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/cinemaImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cinemaTypeTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cinemaNameTV"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/cinemaNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cinemaImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cinemaAddrTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/cinemaTypeTV"
        app:layout_constraintEnd_toEndOf="@+id/cinemaNameTV"
        app:layout_constraintStart_toStartOf="@+id/cinemaNameTV"
        app:layout_constraintTop_toBottomOf="@+id/cinemaNameTV" />

    <TextView
        android:id="@+id/cinemaTypeTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Ráº¡p "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cinemaAddrTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cinemaAddrTV" />

</androidx.constraintlayout.widget.ConstraintLayout>